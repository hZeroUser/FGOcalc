<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/isc_cv_servant"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardCornerRadius="10dp"
    app:elevation="20dp">

    <RelativeLayout
        style="@style/ll_match_width_vertical"
        android:layout_width="80dp">

        <ImageView
            android:id="@+id/isc_iv_portrait"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/image1"/>

        <!--序号-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/isc_tv_id_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="No 999"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/isc_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="No 999"
                android:textSize="16dp"
                android:textColor="@color/colorGolden"/>


        </RelativeLayout>

        <LinearLayout
            style="@style/ll_match_width_vertical"
            android:layout_width="match_parent"
            android:layout_below="@+id/isc_iv_portrait"
            android:gravity="center">

            <TextView
                android:id="@+id/isc_tv_classtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Creator"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/isc_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="贞德·Alter·圣诞·Lily"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>