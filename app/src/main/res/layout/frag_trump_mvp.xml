<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/ftm_ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/ftm_btn_buff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/se_lightblue2_deepblue"
                android:text="Buff设置︽"
                android:textSize="14dp"
                android:textColor="@color/colorWhite"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGolden"/>

            <Button
                android:id="@+id/ftm_btn_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/se_lightblue2_deepblue"
                android:text="清理结果"
                android:textSize="14dp"
                android:textColor="@color/colorWhite"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGolden"/>


            <Button
                android:id="@+id/ftm_btn_calc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/se_lightblue2_deepblue"
                android:text="计算"
                android:textSize="14dp"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            style="@style/ll_match_width_horizontal"
            android:gravity="start|center_vertical">

            <TextView
                style="@style/tv_common"
                android:layout_width="wrap_content"
                android:text="宝具卡色"/>

            <!--宝具卡色-->
            <ImageView
                android:id="@+id/ftm_iv_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/buster"/>

            <CheckBox
                android:id="@+id/ftm_cb_upgraded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换旧倍率"
                android:visibility="gone"/>

        </LinearLayout>

        <!--atk-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                style="@style/tv_common"
                android:layout_weight="5.0"
                android:text="ATK"/>

            <EditText
                android:id="@+id/ftm_et_atk"
                android:layout_weight="1.0"
                style="@style/et_common"
                android:inputType="number"
                android:hint="ATK"/>

        </LinearLayout>

        <!--hp-->
        <LinearLayout
            style="@style/ll_match_width_vertical"
            android:id="@+id/ftm_ll_hp"
            android:visibility="gone">

            <!--总hp-->
            <LinearLayout
                style="@style/ll_match_width_horizontal"
                android:padding="2dp">

                <TextView
                    style="@style/tv_common"
                    android:layout_weight="5.0"
                    android:text="总HP"/>

                <EditText
                    android:id="@+id/ftm_et_hp_total"
                    android:layout_weight="1.0"
                    style="@style/et_common"
                    android:inputType="number"
                    android:hint="总HP"/>

            </LinearLayout>

            <!--剩余hp-->
            <LinearLayout
                style="@style/ll_match_width_horizontal"
                android:padding="2dp">

                <TextView
                    style="@style/tv_common"
                    android:layout_weight="5.0"
                    android:text="剩余HP"/>

                <EditText
                    android:id="@+id/ftm_et_hp_left"
                    android:layout_weight="1.0"
                    style="@style/et_common"
                    android:inputType="number"
                    android:hint="剩余HP"/>

            </LinearLayout>

        </LinearLayout>

        <!--宝具lv-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                style="@style/tv_common"
                android:layout_weight="5.0"
                android:text="宝具lv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1.0"
                android:padding="1dp"
                android:background="@drawable/sh_stroke">

                <Spinner
                    android:id="@+id/ftm_sp_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

        <!--职阶相性-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.0"
                android:gravity="center"
                android:text="职阶相性"
                android:textColor="@color/colorBlack"/>

            <RadioGroup
                android:id="@+id/ftm_rg_weak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ftm_rb_normal"
                    style="@style/rb_atk"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:text="白值"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/ftm_rb_weak"
                    style="@style/rb_atk"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="5dp"
                    android:text="克制"/>

                <RadioButton
                    android:id="@+id/ftm_rb_weakened"
                    style="@style/rb_atk"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="5dp"
                    android:text="被克"/>

            </RadioGroup>

        </LinearLayout>

        <!--阵营相性-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.0"
                android:gravity="center"
                android:text="阵营相性"
                android:textColor="@color/colorBlack"/>

            <RadioGroup
                android:id="@+id/ftm_rg_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ftm_rb_tnormal"
                    style="@style/rb_atk"
                    android:layout_weight="1.0"
                    android:text="无克制"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/ftm_rb_tweak"
                    style="@style/rb_atk"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="克制"/>

                <RadioButton
                    android:id="@+id/ftm_rb_tweakened"
                    style="@style/rb_atk"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="被克"/>

            </RadioGroup>

        </LinearLayout>

        <!--乱数补正-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.0"
                android:gravity="center"
                android:text="乱数补正"
                android:textColor="@color/colorBlack"/>

            <RadioGroup
                android:id="@+id/ftm_rg_random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ftm_rb_random_min"
                    style="@style/rb_atk"
                    android:layout_weight="1.0"
                    android:text="最小"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/ftm_rb_random_max"
                    style="@style/rb_atk"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="最大"/>

                <RadioButton
                    android:id="@+id/ftm_rb_random_average"
                    style="@style/rb_atk"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="平均"/>

                <RadioButton
                    android:id="@+id/ftm_rb_random"
                    style="@style/rb_atk"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="随机"/>

            </RadioGroup>

        </LinearLayout>

        <View
            style="@style/line_x"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ftm_tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ftm_ll_input"
        android:maxLines = "99"
        android:paddingLeft="9dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:text="@string/about_calc_result"
        android:textColor="@color/colorBlack"/>

    <!--人物-->
    <RelativeLayout
        android:id="@+id/ftm_rl_character"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ftm_iv_character"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lily"/>

        <View
            android:id="@+id/ftm_v_character"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ftm_iv_character"
            android:background="@drawable/sh_radius_deepblue_alpha"/>

        <TextView
            android:id="@+id/ftm_tv_character"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ftm_iv_character"
            android:padding="10dp"
            android:gravity="start"
            android:text="ATK是必填项！Buff可以不填！\n能帮上点忙吗？"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

</RelativeLayout>